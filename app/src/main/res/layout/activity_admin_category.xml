<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminCategoryActivity" >

        <TextView
            android:id="@+id/new_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Új állat felvétele"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_category_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/new_pet"
            android:layout_marginTop="45dp" >

            <ImageView
                android:id="@+id/dogs"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/doglogo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_category_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/linear_category_layout1"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/cats"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/catlogo" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
